# Dockerfile для Telegram бота
FROM node:18-alpine

WORKDIR /app

# Копируем package files
COPY package*.json ./
COPY prisma ./prisma/

# Устанавливаем зависимости
RUN npm ci

# Генерируем Prisma Client
RUN npx prisma generate

# Копируем исходный код
COPY . .

# Порт не нужен для бота, но оставим для webhook если понадобится
EXPOSE 3000

# Запускаем бота
CMD ["npm", "run", "bot"]

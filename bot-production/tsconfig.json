{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "index.ts",
    "bot.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    ".next",
    "**/*.tsx",
    "**/*.jsx"
  ]
}
